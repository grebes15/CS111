public class AlleghenyProblem2
{
    //---------------------------------------------------------
    //This is the sum of the first 200 odd positive intergers
    //---------------------------------------------------------
    public static void main (String[] args)
    {
	int sum=0;// accumlator for the sum
	int i=1;// numbers to add added (starts at 1)
	while (i<401)
	    {
		sum=sum+i;
		i=i+2;}
	System.out.println ("This is the sum of the fist 200 odd postivie intergers "+sum );
    }
}
