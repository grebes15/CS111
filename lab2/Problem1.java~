import java.util.Scanner;
public class Problem1{
    
    public static void main (String[] args)
{
    Scanner input = new Scanner (System.in);
    int int1;//(this is input number 1)
    int int2;//(this is input number 2)
    System.out.println("enter input number 1");
    int1 = input.nextInt();
    System.out.println("enter input number 2");
    int2 = input.nextInt();

    int sum = int1 + int2;//this calculates the sum of the two intergers.
	
    int difference = int1 - int2;//this calculates the different of the two intergers.

    int product = int1* int2;//this calculates the product of the two intergers.

    double quotient = int1/(int2 + 0.0);//this calculates the quotient of the two intergers.

    double remainder = int1 % int2;//this calculates the remainder of the two intergers.

    double average =( int1 + int2)/2;//this calculates the average of the two intergers.

    int square = (int1 + int2)*(int1 + int2);// this calculates the square of the two intergers.

    System.out.println("the sum is "+sum );
    System.out.println("the differnce is "+difference );
    System.out.println("the product is "+product );
    System.out.println("the quotient is"+quotient );
    System.out.println("the remainder is"+remainder );
    System.out.println("the average is"+average );
    System.out.println("the square is"+square );
    }
}
    
	